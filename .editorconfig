root = true

# Global
[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# Lua
[*.lua]
indent_style = space
indent_size = 2

# C
[*.c]
indent_style = space
indent_size = 4

# C Header Files
[*.h]
indent_style = space
indent_size = 4

# Markdown
[*.md]
indent_style = space
indent_size = 2
# Trim trailing whitespace
# Use <br>, not spaces, for line breaks

# JSON
[*.json]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Shell Script
[*.sh]
indent_style = space
indent_size = 2

# Plain Text
[*.txt]
trim_trailing_whitespace = false
insert_final_newline = true
